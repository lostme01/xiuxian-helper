# 配置文件模板
# 为保证程序兼容性，所有配置项的“键”（如 api_id）请保持英文。
# 请将此文件复制为 prod.yaml，并填写你的真实信息。
# !!! 重要: prod.yaml 文件已被 .gitignore 忽略，不会被提交到代码库。

# --- 核心Telegram设置 ---
api_id: 1234567
api_hash: 'your_api_hash_here'

# --- 管理员与游戏设置 ---
admin_user_id: 7654321
game_group_id: -1001234567890

# --- 助手行为配置 ---
# 管理员指令前缀
command_prefixes: [',', '，']

# --- 角色配置 ---
sect_name: '黄枫谷'

# --- 黄枫谷专属配置 ---
huangfeng_valley:
  # 小药园自动播种的种子名称
  garden_sow_seed: '凝血草种子'

# --- 自动删除配置 ---
auto_delete:
  enabled: false # 功能总开关，默认为关闭
  delay_after_reply: 60 # 收到回复或超时后，再等多少秒删除（单位：秒）
  delay_fire_and_forget: 120 # “发后不管”的消息，发送后等多少秒删除

# --- 时区设置 ---
timezone: 'Asia/Shanghai'

# --- 日志开关 (true 表示默认开启, false 表示默认关闭) ---
logging_switches:
  system_activity: true
  task_activity: true
  cmd_sent: true
  msg_recv: true
  reply_recv: true
  original_log_enabled: false
  debug_log: false
  log_edits: false
  log_deletes: false
