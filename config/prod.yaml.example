# ----------------- 核心配置 (必须填写) -----------------
api_id: 12345678
api_hash: '0123456789abcdef0123456789abcdef'
admin_user_id: 987654321
game_group_ids:
  - -1001234567890
control_group_id: null
test_group_id: null

# ----------------- 身份与行为 -----------------
sect_name: '黄枫谷'
command_prefixes: [',', '，']
timezone: 'Asia/Shanghai'

# ----------------- AI 答题配置 -----------------
exam_solver:
  gemini_model_name: 'gemini-2.5-pro'
  gemini_api_keys:
    - "AIzaSy...your...first...key"
  reply_delay: { min: 5, max: 15 }

xuangu_exam_solver:
  enabled: true
tianji_exam_solver:
  enabled: true

# ----------------- 周期任务开关 -----------------
task_switches:
  biguan: true
  dianmao: true
  learn_recipes: true
  inventory_refresh: true
  chuang_ta: true
  garden_check: true
  mojun_arrival: true

# ----------------- 核心行为微调 -----------------
send_delay: { min: 12, max: 16 }
command_timeout: 60
heartbeat_timeout: 1200

# ----------------- 周期任务微调 -----------------
task_jitter:
  biguan: { min: 30, max: 90 }
  taiyi_yindao: { min: 300, max: 1200 }
  huangfeng_garden: { min: 5, max: 15 }
  learn_recipes: { min: 3, max: 7 }
task_schedules:
  dianmao: [ '08:15', '20:15' ]

# ----------------- 游戏指令配置 -----------------
game_commands:
  taiyi_yindao: '.引道 水'

# ----------------- 高级配置 -----------------
redis:
  enabled: true
  host: 'host.docker.internal'
  port: 6379
  password: null
  db: 0
  xuangu_db_name: 'xuangu_qa'
  tianji_db_name: 'tianji_qa'

auto_delete:
  enabled: true
  delay_on_reply: 5
  delay_fire_and_forget: 5
  delay_admin_command: 30
  delay_on_timeout: 60

# --- 新增：交易协同配置 ---
trade_coordination:
  focus_fire_auto_delist: true # 是否在上架后立即下架，防止被别人买走，默认为 true

huangfeng_valley:
  garden_sow_seed: '凝血草种子'
taiyi_sect:
  yindao_success_cooldown_hours: 12

log_rotation:
  max_bytes: 5242880
  backup_count: 9

logging_switches:
  system_activity: true
  task_activity: true
  cmd_sent: true
  msg_recv: true
  reply_recv: true
  debug_log: false
  log_edits: false
  log_deletes: true
  original_log_enabled: false
