# ----------------- 核心配置 (必须填写) -----------------
# 从 my.telegram.org 获取
api_id: 12345678
api_hash: '0123456789abcdef0123456789abcdef'

# 您的Telegram用户ID，所有管理指令来源于此
admin_user_id: 987654321

# 游戏机器人所在的群组ID列表
game_group_ids:
  - -1001234567890

# 您与助手进行交互的管理群ID（可选）
control_group_id: null

# ----------------- 身份与行为 -----------------
# 您所在的游戏宗门，用于加载专属插件
sect_name: '黄枫谷'

# 指令前缀
command_prefixes: [',', '，']

# 时区，用于日志和任务调度
timezone: 'Asia/Shanghai'

# ----------------- AI 答题配置 -----------------
exam_solver:
  # 使用的Gemini模型名称
  gemini_model_name: 'gemini-1.5-pro-latest'
  # Gemini API Key列表，可以填多个以轮询使用
  gemini_api_keys:
    - "AIzaSy...your...first...key"
  # 答题前的随机延迟（秒）
  reply_delay: { min: 5, max: 15 }

# 玄骨考校自动答题开关
xuangu_exam_solver:
  enabled: true
# 天机考验自动答题开关
tianji_exam_solver:
  enabled: true

# ----------------- 周期任务开关 -----------------
task_switches:
  biguan: true            # 自动闭关
  dianmao: true           # 自动点卯
  learn_recipes: true     # 自动学习图纸丹方
  inventory_refresh: true # 定时刷新背包缓存
  chuang_ta: true         # 自动闯塔
  garden_check: true      # 自动药园 (黄枫谷专属)
  sect_treasury: true     # 每日自动更新宗门宝库
  mojun_arrival: false    # 自动应对魔君降临事件

# ----------------- 核心行为微调 -----------------
# 指令发送后的随机延迟（秒）
send_delay: { min: 12, max: 16 }
# 等待游戏机器人回复的全局超时时间（秒）
command_timeout: 60

# ----------------- 周期任务微调 -----------------
# 为各类任务增加随机延迟，避免行为过于规律
task_jitter:
  biguan: { min: 30, max: 90 }
  taiyi_yindao: { min: 300, max: 1200 }
  huangfeng_garden: { min: 5, max: 15 }
  learn_recipes: { min: 3, max: 7 }

# 定时任务的执行时间点（24小时制）
task_schedules:
  dianmao: [ '08:15', '20:15' ]

# ----------------- 游戏指令配置 -----------------
# 可自定义部分游戏指令
game_commands:
  taiyi_yindao: '.引道 水'

# ----------------- 高级配置 -----------------
redis:
  enabled: true
  host: 'host.docker.internal' # Docker环境通常用这个
  port: 6379
  password: null
  db: 0
  xuangu_db_name: 'xuangu_qa'
  tianji_db_name: 'tianji_qa'

# 消息自动删除配置
auto_delete:
  enabled: true
  delay_admin_command: 30 # 助手回复您的消息，30秒后删除

# 消息自动删除策略
auto_delete_strategies:
  fire_and_forget:
    delay_self: 5
  request_response:
    delay_self_on_reply: 5
    delay_self_on_timeout: 60
  long_task:
    delay_self: 0
    delay_anchor: 30 # [新增] 长任务的"锚点"消息(如.宗门点卯)，在任务链结束后30秒删除

# 交易协同配置
trade_coordination:
  focus_fire_auto_delist: true

# ----------------- [新功能] 高级自动化 -----------------
# 智能资源管理
auto_resource_management:
  enabled: false
  interval_minutes: 120  # 每120分钟检查一次规则
  rules:
    # 规则1: 自动捐献多余的草药
    - action: "donate"
      item: "凝血草"
      threshold: 500       # 当凝血草的数量 > 500 时
      amount: 100          # 每次捐献 100 个
    # 规则2: 自动用贡献兑换短缺的种子
    - action: "exchange"
      item: "凝血草种子"
      condition: "contribution > 1000 and item < 20" 
      amount: 5

# 自动化知识共享
auto_knowledge_sharing:
  enabled: false
  interval_minutes: 240 # 每240分钟（4小时）检查一次共享机会
  # 黑名单，这些物品即使满足条件也不会被自动共享
  blacklist:
    - "某个珍贵的图纸"

# ----------------- 宗门专属配置 -----------------
huangfeng_valley:
  garden_sow_seed: '凝血草种子'

taiyi_sect:
  yindao_success_cooldown_hours: 12

# ----------------- 日志配置 -----------------
log_rotation:
  max_bytes: 5242880
  backup_count: 9

# 各模块日志开关
logging_switches:
  system_activity: true
  task_activity: true
  cmd_sent: true
  msg_recv: true
  reply_recv: true
  debug_log: false
  log_edits: false
  log_deletes: true
  original_log_enabled: false
