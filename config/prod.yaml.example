# ----------------- 核心配置 (必须填写) -----------------
# 从 my.telegram.org 获取
api_id: 12345678
api_hash: '0123456789abcdef0123456789abcdef'

# 您的Telegram用户ID，所有管理指令来源于此
admin_user_id: 987654321

# 游戏机器人/频道的ID列表
game_bot_ids:
  - 123456789   # 示例：一个机器人的ID

# 游戏机器人所在的群组ID列表
game_group_ids:
  - -1001234567890

# 您与助手进行交互的管理群ID（可选）
control_group_id: null

# ----------------- 身份与行为 -----------------
sect_name: '黄枫谷'
command_prefixes: [',', '，']
timezone: 'Asia/Shanghai'

# ----------------- AI 答题配置 -----------------
exam_solver:
  gemini_model_names:
    - 'gemini-2.5-pro'
    - 'gemini-2.5-flash'
    - 'gemini-2.5-flash-lite'
  gemini_api_keys:
    - "AIzaSy...your...first...key"
  reply_delay: { min: 5, max: 15 }

xuangu_exam_solver:
  enabled: true
tianji_exam_solver:
  enabled: true

# ----------------- 周期任务开关 -----------------
task_switches:
  biguan: true
  dianmao: true
  learn_recipes: true
  inventory_refresh: true
  chuang_ta: true
  garden_check: true
  sect_treasury: true
  mojun_arrival: false

# ----------------- 核心行为微调 -----------------
send_delay: { min: 12, max: 16 }
command_timeout: 60

# ----------------- 周期任务微调 -----------------
task_jitter:
  biguan: { min: 30, max: 90 }
  taiyi_yindao: { min: 300, max: 1200 }
  huangfeng_garden: { min: 5, max: 15 }
  learn_recipes: { min: 3, max: 7 }

task_schedules:
  dianmao: [ '08:15', '20:15' ]

# ----------------- 游戏指令配置 -----------------
game_commands:
  taiyi_yindao: '.引道 水'

# ----------------- 高级配置 -----------------
redis:
  enabled: true
  host: 'host.docker.internal'
  port: 6379
  password: null
  db: 0
  xuangu_db_name: 'xuangu_qa'
  tianji_db_name: 'tianji_qa'

auto_delete:
  enabled: true
  delay_admin_command: 30

auto_delete_strategies:
  fire_and_forget: { delay_self: 5 }
  request_response: { delay_self_on_reply: 5, delay_self_on_timeout: 60 }
  long_task: { delay_self: 0, delay_anchor: 30 }

trade_coordination:
  focus_fire_auto_delist: true
  crafting_session_timeout_seconds: 300

# ----------------- [V2.0] 智能资源管理 -----------------
auto_resource_management:
  enabled: false
  interval_minutes: 120
  rules:
    # 示例1: 当“凝血草”数量超过1000时，自动捐献500个“凝血草”
    # - check_resource: "凝血草"
    #   condition: "resource > 1000"
    #   action: "donate"
    #   item: "凝血草"
    #   amount: 500
    #
    # 示例2: 当“宗门贡献”超过20000时，自动兑换10个“凝血草种子”
    # - check_resource: "contribution"
    #   condition: "resource > 20000"
    #   action: "exchange"
    #   item: "凝血草种子"
    #   amount: 10

auto_knowledge_sharing:
  enabled: false
  interval_minutes: 240
  blacklist: []

# ----------------- 广播配置 -----------------
broadcast:
  noisy_commands:
    - "任务列表"
    - "查看配置"
    - "日志开关"
    - "任务开关"
    - "帮助"
    - "菜单"
    - "help"
    - "menu"
    - "状态"
    - "查看背包"
    - "查看宝库"
    - "查看角色"
    - "查看阵法"

# ----------------- 宗门专属配置 -----------------
huangfeng_valley:
  garden_sow_seed: '凝血草种子'

taiyi_sect:
  yindao_success_cooldown_hours: 12

# ----------------- 日志配置 -----------------
log_rotation:
  max_bytes: 5242880
  backup_count: 9

logging_switches:
  system_activity: true
  task_activity: true
  cmd_sent: true
  msg_recv: true
  reply_recv: true
  debug_log: false
  log_edits: false
  log_deletes: true
  original_log_enabled: false
  
# ----------------- 心跳与维护配置 -----------------
heartbeat:
  active_enabled: true
  active_interval_minutes: 10
  passive_enabled: true
  passive_check_interval_minutes: 5
  passive_threshold_minutes: 30
  sync_enabled: true
  sync_run_time: '04:30'
